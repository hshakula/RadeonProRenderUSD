over "GLOBAL" (
    customData = {
        string libraryName       = "rprUsd"
        string libraryPath       = "./"
        string libraryPrefix     = "RprUsd"
        dictionary libraryTokens = {
        	dictionary rpr = {}
            dictionary id = {
                string value = "rpr:id"
                string doc = """TODO: move to RprMaterialAPI"""
            }
        }
    }
) {
