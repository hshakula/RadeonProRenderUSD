    inherits = </APISchemaBase>
    customData = {
        token apiSchemaType = "singleApply"
    }
    doc = """."""
) {
	token rpr:global:quality = "Full" (
        allowedTokens = ["Low", "Medium", "High", "FullLegacy", "Full"]
        customData = {
            string apiName = "quality"
        }
        doc = """."""
    )
}